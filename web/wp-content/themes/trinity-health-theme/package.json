{
  "name": "trinity-health-theme",
  "version": "1.0.0",
  "description": "Trinity Health WordPress theme with modern development tools",
  "main": "index.js",
  "scripts": {
    "build": "wp-scripts build",
    "start": "concurrently \"ddev npm run dev\" \"npm run browser-sync\" \"node watch-and-reload.js\"",
    "dev": "wp-scripts start",
    "browser-sync": "browser-sync start --config bs-config.js",
    "start:basic": "wp-scripts start",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "format": "wp-scripts format",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "deploy:staging": "cd ../../../ && ./deploy-staging.sh",
    "deploy:staging:rsync": "cd ../../../ && ./deploy-staging-rsync.sh"
  },
  "keywords": [
    "wordpress",
    "theme",
    "healthcare",
    "trinity-health",
    "zambia"
  ],
  "author": "Trinity Health Development Team",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@wordpress/scripts": "^28.6.0",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.4.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "postcss": "^8.4.0",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "accordion-js": "^3.4.1",
    "chokidar": "^4.0.3",
    "heroicons": "^2.2.0",
    "swiper": "^11.2.10"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}

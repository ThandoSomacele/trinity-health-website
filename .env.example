# Trinity Health - Deployment Configuration
# Copy this file to .env and update with your server details

# ===========================================
# FILE DEPLOYMENT CONFIGURATION
# ===========================================

# Staging Server - FTP Deployment
STAGING_HOST=ftp.your-staging-server.com
STAGING_USER=your-ftp-username
STAGING_PASS=your-ftp-password
STAGING_PATH=/path/to/staging/root
STAGING_PORT=21

# Production Server - FTP Deployment
PRODUCTION_HOST=ftp.your-production-server.com
PRODUCTION_USER=your-ftp-username
PRODUCTION_PASS=your-ftp-password
PRODUCTION_PATH=/path/to/production/root
PRODUCTION_PORT=21

# ===========================================
# DATABASE DEPLOYMENT CONFIGURATION
# ===========================================

# Local Development Database (DDEV auto-configured)
LOCAL_DB_HOST=db
LOCAL_DB_NAME=db
LOCAL_DB_USER=db
LOCAL_DB_PASS=db
LOCAL_SITE_URL=https://trinity-health-website.ddev.site

# Staging Database
STAGING_DB_HOST=localhost
STAGING_DB_NAME=your_staging_db
STAGING_DB_USER=your_staging_user
STAGING_DB_PASS=your_staging_password
STAGING_SITE_URL=https://staging.yourdomain.com

# Production Database
PRODUCTION_DB_HOST=localhost
PRODUCTION_DB_NAME=your_production_db
PRODUCTION_DB_USER=your_production_user
PRODUCTION_DB_PASS=your_production_password
PRODUCTION_SITE_URL=https://yourdomain.com

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# WordPress Configuration
WP_ENV=development
WP_DEBUG=true

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Health Check URLs
HEALTH_CHECK_STAGING=https://staging.yourdomain.com/wp-admin/
HEALTH_CHECK_PRODUCTION=https://yourdomain.com/wp-admin/

# ===========================================
# URL CONFIGURATION (for database deployment)
# ===========================================

# These URLs are used for database export/import URL replacement
LOCAL_URL=https://trinity-health-website.ddev.site
STAGING_URL=https://staging.yourdomain.com
PRODUCTION_URL=https://yourdomain.com
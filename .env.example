# Trinity Health - Deployment Configuration
# Copy this file to .env and update with your server details

# ===========================================
# FILE DEPLOYMENT CONFIGURATION
# ===========================================

# Staging Server - File Deployment
STAGING_HOST=your-staging-server.com
STAGING_USER=your-ftp-username
STAGING_PASS=your-ftp-password
STAGING_PATH=/var/www/html
STAGING_PORT=22

# Production Server - File Deployment
PRODUCTION_HOST=your-production-server.com
PRODUCTION_USER=your-production-username
PRODUCTION_PASS=your-production-password
PRODUCTION_PATH=/var/www/html
PRODUCTION_PORT=22

# ===========================================
# DATABASE DEPLOYMENT CONFIGURATION
# ===========================================

# Local Development Database (DDEV auto-configured)
LOCAL_DB_HOST=localhost
LOCAL_DB_NAME=trinity_local
LOCAL_DB_USER=root
LOCAL_DB_PASS=
LOCAL_SITE_URL=http://localhost:8000

# Staging Database
STAGING_DB_HOST=localhost
STAGING_DB_NAME=trinity_staging
STAGING_DB_USER=staging_user
STAGING_DB_PASS=your-staging-db-password
STAGING_SITE_URL=https://staging.trinityhealth.co.zm

# Production Database
PRODUCTION_DB_HOST=localhost
PRODUCTION_DB_NAME=trinity_production
PRODUCTION_DB_USER=production_user
PRODUCTION_DB_PASS=your-production-db-password
PRODUCTION_SITE_URL=https://trinityhealth.co.zm

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# WordPress Configuration
WP_ENV=development
WP_DEBUG=true

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Health Check URLs
HEALTH_CHECK_STAGING=https://staging.trinityhealth.co.zm/wp-admin/
HEALTH_CHECK_PRODUCTION=https://trinityhealth.co.zm/wp-admin/